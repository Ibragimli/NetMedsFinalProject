@model List<Product>


@foreach (var item in Model)
{
    <div class="item">
        <div class="disImage">
            <a href="#">
                <img class="img-fluid" src="./Images/productImages/@item.ProductImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image" alt="">
            </a>
        </div>
        <a href="#">
            <h2>
                @item.Name
            </h2>
        </a>
        @if (item.DiscountPrice > 0)
        {
            <div class="disPrice">
                <p>₼@((item.SalePrice*(100-item.DiscountPrice)/100))</p>
                <del> ₼@item.SalePrice</del>
                <span> @item.SalePrice%</span>
            </div>
        }
        else
        {
            <div class="disPrice">
                <p> ₼@item.SalePrice</p>
            </div>
        }
        @if (item.StockStatus == false)
        {
            <div class="notStock ">
                <h1>Not Stock</h1>
            </div>
            <div class="wishIcon">
                <a href="#">
                    <i class="fa-regular fa-heart"></i>
                </a>
            </div>
        }
        else
        {
            <div class="basketIcon">
                <a href="#">
                    <i class="fa-solid fa-basket-shopping"></i>
                </a>
            </div>
            <div class="wishIcon">
                <a href="#">
                    <i class="fa-regular fa-heart"></i>
                </a>
            </div>
        }
    </div>
}

