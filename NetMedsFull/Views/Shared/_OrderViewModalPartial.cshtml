@model Order
@{
    var Count = 0;
}
<div class="modal fade" id="orderModal-@TempData["modalOrder"]" tabindex="-1" aria-labelledby="orderModal-@TempData["modalOrder"]-Label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderModal-@TempData["modalOrder"]-Label">Order View</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-cell">
                    <thead>
                        <tr>
                            <th scope="col">Phone</th>
                            <th scope="col">Address 1</th>
                            <th scope="col">Address 2</th>
                            <th scope="col">Country</th>
                            <th scope="col">City</th>
                            <th scope="col">Zipcode</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>@Model.Phone</td>
                            <td>@Model.Address1</td>
                            <td>@Model.Address2</td>
                            <td>@Model.Country</td>
                            <td>@Model.City</td>
                            <td>@Model.Zipcode</td>

                        </tr>
                    </tbody>
                </table>
                <h1 style="font-weight: 700;color: blue;font-size: 23px;" class="mb-2">Products</h1>
                @foreach (var item in Model.OrderItems)
                {
                    Count++;
                    <table class="table table-cell">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">SalePrice</th>
                                <th scope="col">Count</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>@Count</td>
                                <td>@item.Product.Name</td>
                                <td>@item.Product.SalePrice</td>
                                <td>@item.Count</td>
                            </tr>
                        </tbody>
                    </table>
                }

            </div>
        </div>
    </div>
</div>