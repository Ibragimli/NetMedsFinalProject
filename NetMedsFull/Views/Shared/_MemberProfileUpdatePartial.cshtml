@model ProfileUpdateViewModel

<div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
     aria-labelledby="v-pills-home-tab">
    <div class="myaccount-content">
        <h3>Account Details</h3>
        <div class="account-details-form">
            <form method="post">
                <div class="row">
                    <div class="col-lg-6 mb-2 ">
                        <label asp-for="Fullname" class="col-sm-2 col-form-label"> Fullname </label>
                        <div class="col-sm-10">
                            <input asp-for="Fullname" type="text" class="form-control">
                            <span asp-validation-for="Fullname" class="text-danger ps-2 mt-2"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-2 ">
                        <label asp-for="Username" class="col-sm-2 col-form-label">Username</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Username">
                            <span asp-validation-for="Username" class="text-danger ps-2 mt-2"></span>

                        </div>
                    </div>
                    <div class="col-lg-6 mb-2 ">
                        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger ps-2 mt-2"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-2 ">
                        <label asp-for="PhoneNumber" class="col-sm-7 col-form-label">
                            Phone Number
                        </label>
                        <div class="col-sm-10">
                            <input type="tel" class="form-control" asp-for="PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger ps-2 mt-2"></span>
                        </div>
                    </div>
                    <h3>
                        Password change
                    </h3>
                    <div class="col-lg-12 mb-2 ">
                        <label asp-for="CurrentPassword"
                               class="col-sm-7 col-form-label">
                            Current
                            Password
                        </label>
                        <div class="col-sm-11">
                            <input type="password" class="form-control"
                                   asp-for="CurrentPassword">
                            <span asp-validation-for="CurrentPassword" class="text-danger ps-2 mt-2"></span>

                        </div>
                    </div>
                    <div class="col-lg-6 mb-2 ">
                        <label asp-for="NewPassword" class="col-sm-7 col-form-label">
                            New
                            Password
                        </label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control"
                                   asp-for="NewPassword">
                            <span asp-validation-for="NewPassword" class="text-danger ps-2 mt-2"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-2 ">
                        <label asp-for="ConfirmPassword"
                               class="col-sm-7 col-form-label">
                            Confirm
                            Password
                        </label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" asp-for="ConfirmPassword">
                            <span asp-validation-for="ConfirmPassword" class="text-danger ps-2 mt-2"></span>
                        </div>
                        <div class="text-danger ps-2 mt-2" asp-validation-summary="ModelOnly"></div>

                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">
                            Save
                            Change
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
