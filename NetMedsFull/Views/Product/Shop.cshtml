
@{
    ViewData["Title"] = "Shop";
    int collapseCount = 0;
}
@model ProductShopViewModel


<section id="shopFilter">
    <div class="container">
        <div class="row">
            <div class="col-lg-2 shopLeft">
                <div class="shopCategory">
                    <h1>
                        Category
                    </h1>
                    <div class="accordion accordion-flush" id="accordionFlushExample">
                        @foreach (var category in Model.Categories)
                        {
                            collapseCount++;
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="flush-headingOne">
                                    <a class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                       data-bs-target="#collapse-@collapseCount" aria-expanded="false" aria-controls="collapse-@collapseCount">
                                        @category.Name
                                    </a>
                                </h2>
                                <div id="collapse-@collapseCount" class="accordion-collapse collapse"
                                     aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <ul>
                                            @foreach (var subCategory in Model.SubCategories.Where(x => x.CategoryId == category.Id))
                                            {
                                                <li>
                                                    <a asp-action="shop" asp-controller="product" asp-route-categoryId="@category.Id">
                                                        @subCategory.Name
                                                    </a>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="shopFilter">
                    <h1>
                        Filters
                    </h1>

                    <div class="filterBrands">
                        <div class="noneAccordion">
                            <h2>
                                Brands
                            </h2>
                            <form>

                                @foreach (var brand in Model.Brands)
                                {
                                    <div class="form-check">
                                        <a asp-action="shop" asp-controller="product" asp-route-brandId="@brand.Id">
                                            @brand.Name (@brand.SubCategoryBrands.Count())
                                        </a>
                                    </div>
                                }

                            </form>
                        </div>
                    </div>

                    <div class="filterBrands">
                        <div class="accordion accordion-flush" id="accordionFlushExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="flush-headingOne">
                                    <a class="accordion-button collapsed" data-bs-toggle="collapse"
                                       data-bs-target="#flush-collapse1" aria-expanded="false"
                                       aria-controls="flush-collapse1">
                                        Brands
                                    </a>
                                </h2>
                                <div id="flush-collapse1" class="accordion-collapse collapse"
                                     aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <form >
                                            @foreach (var brand in Model.Brands)
                                            {
                                                <div class="form-check">
                                                    <a asp-action="shop" asp-controller="product" asp-route-brandId="@brand.Id">
                                                        @brand.Name (@brand.SubCategoryBrands.Count())
                                                    </a>
                                                </div>
                                            }
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="filterType">
                        <h2>
                            Type
                        </h2>
                        <form >

                            <div class="form-check">
                                <a asp-action="shop" asp-controller="product" asp-route-typeId="@ProductType.Liquid">
                                    @ProductType.Liquid
                                </a>

                            </div>
                            <div class="form-check">
                                <a asp-action="shop" asp-controller="product" asp-route-typeId="@ProductType.Tablet">
                                    @ProductType.Tablet
                                </a>
                            </div>

                        </form>
                    </div>
                    <h2>
                        Price
                    </h2>
                    <div class="filterRangePrice">
                        <div class="row">
                            <div class="col-sm-12">
                                <div id="slider-range"></div>
                            </div>
                        </div>
                        <div class="row slider-labels">
                            <div class="col-lg-6 caption">
                                <span id="slider-range-value1"></span>
                            </div>
                            <div class="col-lg-6 text-right caption d-flex justify-content-end">
                                <span id="slider-range-value2"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <form>
                                    <input type="hidden" name="min-value" value="">
                                    <input type="hidden" name="max-value" value="">
                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-lg-10 shopRight">
                <div class="shopSlider">
                    <div class="owl-carousel owl-carousel-slider owl-carousel-shop owl-theme slider p-0 m-0">
                        @foreach (var item in Model.ShopSliders)
                        {
                            <div class="item">
                                <a asp-action="detail" asp-controller="product" asp-route-id="@item.ProductId">
                                    <img src="~/Images/sliders/@item.Image" alt="" width="100%"
                                         height="100%">
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <div class="shopProducts">
                    <h2>
                        ALL PRODUCTS
                    </h2>
                    <div class="row">
                        @foreach (var product in Model.PagenatedProducts)
                        {
                            <div class="col-lg-3">
                                <div class="shopProduct">
                                    <div class="shopProImage">
                                        <a asp-action="detail" asp-controller="product" asp-route-id="@product.Id">
                                            <img src="~/Images/productImages/@product.ProductImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image"
                                                 alt="">
                                            <span>@product.DiscountPercent% OFF</span>
                                        </a>
                                    </div>
                                    <div class="mt-3 shopTitle">
                                        <a asp-action="detail" asp-controller="product" asp-route-id="@product.Id">
                                            <h2>
                                                @product.Name
                                            </h2>
                                        </a>

                                        <p>
                                            Mkt: @product.Brand.Name
                                        </p>
                                    </div>
                                    @if (product.DiscountPercent > 0)
                                    {
                                        <div class="shopPrice">
                                            <div class="bestP">
                                                <span>Best price* </span>
                                                <p>₼@((product.SalePrice*(100- product.DiscountPercent)/100).ToString("#.00"))</p>
                                            </div>
                                            <div class="MRP">
                                                <span>MRP </span>
                                                <del>₼@product.SalePrice.ToString("#.00")</del>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="shopPrice">
                                            <div class="bestP">
                                                <span>Price* </span>
                                                <p>₼@((product.SalePrice*(100- product.DiscountPercent)/100).ToString("#.00"))</p>
                                            </div>
                                        </div>
                                    }

                                    @if (product.StockStatus == false)
                                    {
                                        <div class="shopBtn">
                                            <div class="notStock ">
                                                <h1>Not Stock</h1>
                                            </div>
                                            <a href="#">
                                                <i class="fa-regular fa-heart"></i>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="shopBtn">
                                            <a class="AddBtn" href="#">ADD TO CART</a>
                                            <a href="#">
                                                <i class="fa-regular fa-heart"></i>
                                            </a>
                                        </div>
                                    }

                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="row shopPagination">
                    <nav aria-label="...">
                        <ul class="pagination">
                            @if (Model.PagenatedProducts.HasPrev)
                            {
                                <li class="page-item disabled">
                                    <a asp-action="shop" asp-controller="product" asp-route-page="@(Model.PagenatedProducts.PageIndex-1)" class="page-link">Previous</a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.PagenatedProducts.TotalPages; i++)
                            {
                                <li class="page-item @(Model.PagenatedProducts.PageIndex==i?"active":"")" aria-current="page">
                                    <a asp-action="shop" asp-controller="product" asp-route-page="@i" class="page-link">@i</a>
                                </li>
                            }

                            @if (Model.PagenatedProducts.HasNext)
                            {
                                <li class="page-item">
                                    <a asp-action="shop" asp-controller="product" asp-route-page="@(Model.PagenatedProducts.PageIndex+1)" class="page-link">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script src="script.js"></script>
    <script src="~/js/shopSlider.js"></script>
    <script src="~/js/bootstrap-slider.js"></script>
    <script src="~/js/bootstrap-slider.min.js"></script>
    <script src="~/js/shopFilterRange.js"></script>
}