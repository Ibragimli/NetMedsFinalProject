
@{
    ViewData["Title"] = "Index";
    var count = 0;
}

@model List<TrendSlider>

<div class="content-body" style="min-height: 740px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="displ card-header">
                        <h4 class="card-title">
                            Trend Slider Panel
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-end">
                            <a class="btn btn-primary mb-1" asp-action="create" asp-controller="trendslider">Create</a>
                        </div>
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Image</th>
                                        <th>ProductId</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var trend in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>
                                                <img src="~/uploads/trendsliders/@trend.Name" width="100" height="100" />
                                            </td>
                                            <td>@trend.ProductId</td>
                                            <td class="text-center">
                                                <a class="btn btn-warning mb-1" asp-action="edit" asp-controller="trendslider" asp-route-id="@trend.Id">Edit</a>
                                                <a class="btn btn-danger delete-btn  mb-1" asp-action="delete" asp-controller="trendslider" asp-route-id="@trend.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Image</th>
                                        <th>ProductId</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/manage/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/manage/js/plugins-init/datatables.init.js"></script>
    <script src="~/manage/vendor/jquery-nice-select/js/jquery.nice-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>

}

